<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileGabiActivity">

    <TextView
        android:id="@+id/textViewProfileGabaiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="שם"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfileGabiProfile"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfileGabiProfile" />

    <ImageView
        android:id="@+id/imageViewProfileGabiProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonProfileGabiManageSynagoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/textViewProfileGabaiQoute"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfileGabaiQoute" />

    <TextView
        android:id="@+id/textViewProfileGabaiQoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ציטוט"
        app:layout_constraintStart_toStartOf="@+id/textViewProfileGabaiName"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfileGabaiName" />

    <Button
        android:id="@+id/buttonProfileGabiMassages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/buttonProfileGabiManageSynagoe"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfileGabiManageSynagoe" />
</androidx.constraintlayout.widget.ConstraintLayout>