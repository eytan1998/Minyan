<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfilePrayerActivity">

    <ImageView
        android:id="@+id/imageViewProfilePrayerProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewProfilePrayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintTop_toTopOf="@+id/imageViewProfilePrayerProfile" />

    <Button
        android:id="@+id/buttonProfilePrayerFindSynagoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="חפש בתי כנסת"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfilePrayerQoute" />

    <TextView
        android:id="@+id/textViewProfilePrayerQoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfilePrayerProfile" />

    <Button
        android:id="@+id/buttonProfilePrayerMassages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="הודעות"
        app:layout_constraintEnd_toEndOf="@+id/buttonProfilePrayerFindSynagoe"
        app:layout_constraintStart_toStartOf="@+id/buttonProfilePrayerFindSynagoe"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfilePrayerFindSynagoe" />

    <Button
        android:id="@+id/buttonProfilePrayerFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="מועדפים"
        app:layout_constraintEnd_toEndOf="@+id/buttonProfilePrayerMassages"
        app:layout_constraintStart_toStartOf="@+id/buttonProfilePrayerMassages"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfilePrayerMassages" />

    <Button
        android:id="@+id/buttonProfilePrayerToGabai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>