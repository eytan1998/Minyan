<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfilePrayerActivity">


    <ImageView
        android:id="@+id/imageViewProfilePrayerProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/textViewProfilePrayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintTop_toTopOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/buttonProfilePrayerFindSynagoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="חפש בתי כנסת"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfilePrayerQoute" />

    <TextView
        android:id="@+id/textViewProfilePrayerQoute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfilePrayerProfile" />

    <Button
        android:id="@+id/buttonProfilePrayerMassages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="הודעות"
        app:layout_constraintEnd_toEndOf="@+id/buttonProfilePrayerFindSynagoe"
        app:layout_constraintStart_toStartOf="@+id/buttonProfilePrayerFindSynagoe"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfilePrayerFindSynagoe" />

    <Button
        android:id="@+id/buttonProfilePrayerFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="מועדפים"
        app:layout_constraintEnd_toEndOf="@+id/buttonProfilePrayerMassages"
        app:layout_constraintStart_toStartOf="@+id/buttonProfilePrayerMassages"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfilePrayerMassages" />

    <Button
        android:id="@+id/buttonProfilePrayerToGabai"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הירשם כגבאי"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView18"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="מעוניין להיות גבאי?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonProfilePrayerEditImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintEnd_toEndOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfilePrayerProfile"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfilePrayerProfile"
        app:srcCompat="@drawable/ic_edit" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ברוך הבא למתפלל"
        app:layout_constraintBottom_toTopOf="@+id/textViewProfilePrayerName"
        app:layout_constraintStart_toStartOf="@+id/textViewProfilePrayerName" />

    <Button
        android:id="@+id/buttonProfilePrayerChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="שנה סיסמא"
        app:layout_constraintEnd_toEndOf="@+id/buttonProfilePrayerFavorite"
        app:layout_constraintStart_toStartOf="@+id/buttonProfilePrayerFavorite"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfilePrayerFavorite" />

</androidx.constraintlayout.widget.ConstraintLayout>