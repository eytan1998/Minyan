<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfilePrayerActivity">

        <TextView
            android:id="@+id/textViewProfilePrayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="שם"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imageViewProfilePrayerProfile"
            app:layout_constraintTop_toBottomOf="@+id/imageViewProfilePrayerProfile" />

        <ImageView
            android:id="@+id/imageViewProfilePrayerProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonProfilePrayerFindSynagoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="חפש בתי כנסת"
        app:layout_constraintStart_toStartOf="@+id/textViewProfilePrayerQoute"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfilePrayerQoute" />

        <TextView
            android:id="@+id/textViewProfilePrayerQoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ציטוט"
            app:layout_constraintStart_toStartOf="@+id/textViewProfilePrayerName"
            app:layout_constraintTop_toBottomOf="@+id/textViewProfilePrayerName" />

        <Button
            android:id="@+id/buttonProfilePrayerMassages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="הודעות"
            app:layout_constraintEnd_toEndOf="@+id/buttonProfilePrayerFindSynagoe"
            app:layout_constraintTop_toBottomOf="@+id/buttonProfilePrayerFindSynagoe" />

    <Button
        android:id="@+id/buttonProfilePrayerFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מועדפים"
        app:layout_constraintStart_toStartOf="@+id/buttonProfilePrayerMassages"
        app:layout_constraintTop_toBottomOf="@+id/buttonProfilePrayerMassages" />
</androidx.constraintlayout.widget.ConstraintLayout>