<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewChangeToGabai"
        android:layout_width="325dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <TextView
        android:id="@+id/textVIew16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="אם אתה מעוניין להיות גבאי  תוסיף פה את מספר הפלאפון שלך ולאחר וידוא אתה תקבל גם חשבון גבאי עם שם משתמש וסיסמא זהים"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonToGabaiexit"
        app:layout_constraintStart_toStartOf="@+id/viewChangeToGabai"
        app:layout_constraintTop_toTopOf="@+id/viewChangeToGabai" />

    <EditText
        android:id="@+id/editTexttToGabaiPhone"
        android:layout_width="287dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:gravity="top"
        android:hint="מספר פלאפון"
        android:inputType="phone"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutToGabai"
        app:layout_constraintEnd_toEndOf="@+id/viewChangeToGabai"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/viewChangeToGabai"
        app:layout_constraintTop_toBottomOf="@+id/textVIew16"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonToGabaiexit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toEndOf="@+id/viewChangeToGabai"
        app:layout_constraintTop_toTopOf="@+id/viewChangeToGabai" />

    <LinearLayout
        android:id="@+id/linearLayoutToGabai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/viewChangeToGabai"
        app:layout_constraintEnd_toEndOf="@+id/viewChangeToGabai"
        app:layout_constraintStart_toStartOf="@+id/viewChangeToGabai">

        <Button
            android:id="@+id/buttonToGabaisend"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שליחה" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>