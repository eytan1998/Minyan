<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewEditField"
        android:layout_width="325dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEditFieldTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonEditFieldExit"
        app:layout_constraintStart_toStartOf="@+id/viewEditField"
        app:layout_constraintTop_toTopOf="@+id/viewEditField" />

    <EditText
        android:id="@+id/editTextEditField"
        android:layout_width="287dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutEditField"
        app:layout_constraintEnd_toEndOf="@+id/viewEditField"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/viewEditField"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditFieldTitle"
        />

    <Button
        android:id="@+id/buttonEditFieldExit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toEndOf="@+id/viewEditField"
        app:layout_constraintTop_toTopOf="@+id/viewEditField" />

    <LinearLayout
        android:id="@+id/linearLayoutEditField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/viewEditField"
        app:layout_constraintEnd_toEndOf="@+id/viewEditField"
        app:layout_constraintStart_toStartOf="@+id/viewEditField">

        <Button
            android:id="@+id/buttonEditFieldSend"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שליחה" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>